<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Blogs</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/posts"
                >Home</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <h1>ALL POSTS</h1>
    </div>
    <div
      class="container"
      style="
        display: flex;
        flex-wrap: wrap;
        gap: 1em;
        align-items: center;
        margin: 1em auto;
      "
    >
      <% for (let post of posts) { %>
      <div class="card" style="width: 18rem; height: 20em">
        <div class="card-body">
          <h5 class="card-title"><u><%= post.title %></u></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">
            (<%= post.description %>)
          </h6>
          <p class="card-text" style="height: 10em; overflow: hidden">
            <%= post.post %>
          </p>
        </div>
        <a href="/posts/<%=post.id%>" class="card-link">Details</a>
      </div>
      <% } %>
    </div>

    <div class="container" style="margin: 1em auto">
      <a href="/posts/addPost"
        ><button type="button" class="btn btn-primary">+ Add Post</button></a
      >
    </div>
  </body>
</html>
